<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/URLText"
            android:text="https://dl.dropboxusercontent.com/u/50155080/%E8%B6%81%E6%97%A9-%E5%BC%B5%E5%AE%87.mp3"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.32">
    </LinearLayout>
    <VideoView
            android:layout_width="fill_parent"
            android:layout_height="122dp"
            android:id="@+id/videoView" android:focusable="true" android:focusableInTouchMode="true"
            android:clickable="true" android:layout_weight="0.36"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:text="Start"
            android:id="@+id/startButton"/>
</LinearLayout>

